<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>lv.company.edup</groupId>
  <artifactId>server</artifactId>
  <packaging>war</packaging>
  <version>${version.major}.${version.minor}.${version.tag}</version>

  <name>Educational planning application</name>

  <developers>
    <developer>
      <name>Artjoms Stukans</name>
      <email>artjoms.stukans@gmal.com</email>
      <organization>Private organization</organization>
    </developer>
  </developers>

  <properties>
    <version.major>0</version.major>
    <version.minor>3</version.minor>
    <version.tag>0</version.tag>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.6</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <profiles>
    <profile>
      <id>Deployment</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.wildfly.plugins</groupId>
            <artifactId>wildfly-maven-plugin</artifactId>
            <version>1.0.2.Final</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>deploy-only</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>Local</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <configuration>
              <webResources>
                <resource>
                  <directory>src/localhost/webapp</directory>
                </resource>
              </webResources>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>Amazon</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <finalName>edup</finalName>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>

    <plugins>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
          <compilerArgument>-proc:none</compilerArgument>
        </configuration>
        <executions>
          <execution>
            <id>run-annotation-processors-only</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>compile</goal>
            </goals>
            <configuration>
              <compilerArgument>-proc:only</compilerArgument>
              <includes>
                <include>**/persistence/**/*.java</include>
              </includes>
              <annotationProcessors>
                <annotationProcessor>
                  org.hibernate.jpamodelgen.JPAMetaModelEntityProcessor
                </annotationProcessor>
              </annotationProcessors>
              <debug>true</debug>
              <optimize>true</optimize>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.4.0</version>
        <executions>
          <execution>
            <id>NPM_Install</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>npm</executable>
              <arguments>
                <argument>install</argument>
              </arguments>
              <workingDirectory>${basedir}/src/main/web/ng</workingDirectory>
            </configuration>
          </execution>
          <execution>
            <id>GRUNT_Dist_package</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>grunt</executable>
              <arguments>
                <argument>dist</argument>
              </arguments>
              <workingDirectory>${basedir}/src/main/web/ng</workingDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <version>1.8</version>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <configuration>
              <tasks>
                <copy file="${project.basedir}/src/main/web/ng/vendor/bower_components/angular-utils-pagination/dirPagination.tpl.html"
                      tofile="${project.basedir}/target/edup/ng/vendor/bower_components/angular-utils-pagination/dirPagination.tpl.html"/>

                <copy todir="${project.basedir}/target/edup/ng//vendor/bower_components/bootstrap/dist/fonts">
                  <fileset dir="${project.basedir}/src/main/web/ng/vendor/bower_components/bootstrap/dist/fonts">
                    <include name="*.*"/>
                  </fileset>
                </copy>

                <copy todir="${project.basedir}/target/edup/ng/dist/">
                  <fileset dir="${project.basedir}/src/main/web/ng/dist/">
                    <include name="*.*"/>
                  </fileset>
                </copy>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>

  </build>

